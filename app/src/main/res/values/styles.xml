<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <!--<item name="android:homeAsUpIndicator">@color/white</item>-->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_very_imp_size</item>

    </style>


</resources>
