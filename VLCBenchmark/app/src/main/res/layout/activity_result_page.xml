<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/test_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_results"
        android:id="@+id/uploadButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/softAvg"
        android:layout_toStartOf="@+id/uploadButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_marginBottom="@dimen/default_margin"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hardAvg"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/uploadButton"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_alignTop="@+id/uploadButton"
        android:layout_marginBottom="@dimen/default_margin"/>

</RelativeLayout>