<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/half_default_margin">

    <TextView
        android:text="DEVICE"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_imp_size"
        android:id="@+id/specs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:text="Model"
        android:id="@+id/specs_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specs_title"/>

    <TextView
        android:text="HTC One M8"
        android:id="@+id/specs_model_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/specs_model"/>

    <TextView
        android:id="@+id/specs_android"
        android:text="Android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specs_model_text"/>

    <TextView
        android:id="@+id/specs_android_text"
        android:text="6.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/specs_android"/>

    <TextView
        android:id="@+id/specs_cpu"
        android:text="CPU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specs_android_text"/>

    <TextView
        android:id="@+id/specs_cpu_text"
        android:text="Bla\nBla\nBla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/specs_cpu"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/specs_cpuspeed"
        android:text="CPU Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/specs_cpu_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/specs_cpuspeed_text"
        android:text="3.0 Ghz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/specs_cpuspeed"/>

    <TextView
        android:id="@+id/specs_memory"
        android:text="Memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/specs_cpuspeed_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/specs_memory_text"
        android:text="2.0 GB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/specs_memory"/>
</android.support.constraint.ConstraintLayout>