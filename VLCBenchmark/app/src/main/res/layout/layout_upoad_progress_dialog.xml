<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_upload_progress_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/upload_progress_dialog_title"
        android:layout_margin="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_title_upload_results"
        android:textSize="@dimen/text_very_imp_size"
        android:textColor="@color/black"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/loading_spinner"
        android:progressTint="@color/colorAccent"
        android:progressBackgroundTint="@color/grey400"
        android:layout_below="@id/upload_progress_dialog_title"
        android:padding="@dimen/default_margin"
        />

</RelativeLayout>