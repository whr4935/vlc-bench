<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_column="1"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:text="@string/software"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_column="2"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:text="@string/hardware"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingLeft="5dp"
                android:text="@string/frames_dropped"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/frames_dropped_software"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/frames_dropped_hardware"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingLeft="5dp"
                android:text="@string/bad_screenshots"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bad_screenshots_software"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/bad_screenshots_hardware"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingLeft="5dp"
                android:text="@string/warnings"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/warnings_software"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/warnings_hardware"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:text="@string/vlc_crashes"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/crashes_software"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/crashes_hardware"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:textAlignment="center"
                android:textColor="@android:color/black" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:id="@+id/detail_dismiss"
        android:layout_gravity="right"
        android:layout_marginRight="10dp" />
</LinearLayout>
